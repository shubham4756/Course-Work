LDA 2200H
MOV C,A          ;initialize the counter
SUB A            ;sum=0
LXI H,2201H      ;initalize pointer
BACK: ADD M      ;SUM = SUM +data
INX H            ;Increment pointer
DCR C            ;decrement poniter
JNZ BACK         ;if Counter not = 0 repeat
STA 2300H        ;store sum
HLT              ;terminate program execution